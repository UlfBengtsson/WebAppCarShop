@model CarIndexViewModel
@{
    ViewData["Title"] = "Car Index";
}

<h1>Index</h1>

<a asp-action="Create">Create</a>

<form asp-action="Index" method="post">
    <label asp-for="FilterText"></label>
    <input asp-for="FilterText" />
    <input type="submit"  value="Filter by Brand" />
</form>

<table>
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CarList)
	    {
        <tr>
            <td>@item.Brand</td>
            <td>@item.ModelName</td>
            <td>@item.Price</td>
            <td><a asp-action="Details" asp-route-id="@item.Id">Details</a></td>
        </tr>
	    }
    </tbody>
    
</table>